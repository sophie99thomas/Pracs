BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: miles_input
            multiline: False
            text: "0"
            on_text: app.input_check()
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Up"
                on_press: app.handle_increment(1)
